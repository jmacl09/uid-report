{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/.auth/*"
    ]
  },
  "routes": [
    {
      "route": "/api/uid",
      "allowedRoles": ["authenticated"],
      "methods": ["GET"],
      "rewrite": "/api/LogicAppProxy" 
    },
    {
      "route": "/logs",
      "allowedRoles": ["authenticated"],
      "rewrite": "/index.html"
    },
    {
      "route": "/api/Projects",
      "methods": ["GET", "POST", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "rewrite": "/api/HttpTrigger1"
    },
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/manifest.json",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/favicon.ico",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/login",
      "rewrite": "/.auth/login/aad"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/microsoft.com",
          "clientId": "70f3fda5-4fc5-446e-87b0-3adff82fba7b"
        },
        "login": {
          "scopes": [
            "openid",
            "profile",
            "email"
          ],
          "loginParameters": [
            "domain_hint=microsoft.com"
          ]
        }
      }
    }
  },
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/login"
    }
  },
  "globalHeaders": {
    "Access-Control-Allow-Origin": "https://optical360.net, http://localhost:3000",
    "Access-Control-Allow-Methods": "GET,POST,OPTIONS",
    "Access-Control-Allow-Headers": "Content-Type,Authorization",
    "Access-Control-Allow-Credentials": "true"
  }
}
